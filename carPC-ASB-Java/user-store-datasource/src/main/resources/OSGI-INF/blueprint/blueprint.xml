<?xml version="1.0" encoding="UTF-8"?>
<blueprint default-activation="eager"
	xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.0.0">

	<bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
		<property name="URL"
			value="jdbc:h2:tcp://localhost/mem:userdb;DB_CLOSE_DELAY=-1" />
		<property name="user" value="sa" />
		<property name="password" value="" />
	</bean>

	<service interface="javax.sql.DataSource" ref="dataSource">
		<service-properties>
			<entry key="osgi.jndi.service.name" value="jdbc/userDS" />
		</service-properties>
	</service>

</blueprint>
